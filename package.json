  "lint-staged": {
    "src/**/*.{js,jsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "Chrome >= 67",
    "Firefox >= 64",
    "Safari >= 11.1",
    "iOS >= 11.4",
    "Opera >= 57",
    "Edge >= 17",
    "ChromeAndroid >= 71"
  ]
